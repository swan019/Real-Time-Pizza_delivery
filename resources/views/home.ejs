<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2 flex items-center justify-center">
            <div>
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold">Don't wait!</h1>
                <button class="btn-primary my-10 py-2 px-6 rounded-full flex items-center font-bold">
                    Order Now
                </button>
            </div>
        </div>
        <div class="w-1/2 flex items-center justify-center">
            <img src="/img/hero-pizza.png" alt="Delicious Pizza">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>

    <div class="grid grid-cols-4 gap-y-16">
        <% pizzas.forEach(function(pizza) { %>
        <div class="flex items-center justify-center shadow-[rgba(17, 17, 26, 0.1) 0px 0px 16px] mx-2 py-4 rounded-md ">
            <div class="w-64">
                <img src="/img/<%= pizza.image %>" alt="<%= pizza.name %>" class="h-40 mb-4 mx-auto">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart add-to-cart-btn py-1 px-6 rounded-full flex items-center font-bold"
                            aria-label="Add <%= pizza.name %> to cart">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>
